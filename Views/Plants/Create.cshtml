@model Houseplants.Models.Plant

@{
    ViewData["Title"] = "Create";
}

<h1>Lägg till ny krukväxt</h1>



<div class="row justify-content-center">
    <div class="col-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlantName" class="control-label"></label>
                <input asp-for="PlantName" class="form-control" />
                <span asp-validation-for="PlantName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Latin" class="control-label"></label>
                <input asp-for="Latin" class="form-control" />
                <span asp-validation-for="Latin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Level" class="control-label"></label>
                <input asp-for="Level" class="form-control" />
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Family" class="control-label"></label>
                <select asp-for="Family" class="form-control" asp-items="ViewBag.Family"></select>
            </div>
            <div class="form-group">
                <label asp-for="Care" class="control-label"></label>
                <select asp-for="Care" class="form-control" asp-items="ViewBag.Care"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>


    </div>

    <table id="tblHelpRow">
        <thead>
            <tr class="title">
                <th>
                    SkötselId:
                </th>
                <th>
                    Ljusbehov:
                </th>
                <th>
                    Vattenbehov:
                </th>
                <th>
                    Näringsbehov:
                </th>
            </tr>
        </thead>
        <tbody id="helpRowBody">
            @Html.Raw(ViewData["CareTable"])
        </tbody>
    </table>
</div>
<br />

<div>
    <a asp-action="Index">Tillbaka till växtlista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
