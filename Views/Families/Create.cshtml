@model Houseplants.Models.Family

@{
    ViewData["Title"] = "Create";
}

<h1>Skapa ny familj</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FamilyName" class="control-label"></label>
                <input asp-for="FamilyName" class="form-control" />
                <span asp-validation-for="FamilyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FamilyLatin" class="control-label"></label>
                <input asp-for="FamilyLatin" class="form-control" />
                <span asp-validation-for="FamilyLatin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Skapa" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka till växtlista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
