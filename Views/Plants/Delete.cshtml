@model Houseplants.Models.Plant

@{
    ViewData["Title"] = "Delete";
}

<h1>Radera</h1>

<h3>Är du säker på att du vill ta bort denna växt?</h3>

        <hr />
        <div class="row justify-content-center">
            <div class="col-auto">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.PlantName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.PlantName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Latin)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Latin)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Level)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Level)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CareNavigation)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CareNavigation.CareId)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.FamilyNavigation)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FamilyNavigation.FamilyLatin)
                        </dd>
                    </dl>
                    
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="PlantId" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-action="Index">Tillbaka till växtlista</a>
                    </form>
            </div>
        </div>
